prep_src() {
  mkdir -p src/github.com/cloudfoundry/leadership-election-release/app
  mkdir -p src/github.com/cloudfoundry/leadership-election-release/cmd

  cp -r vendor/* src/

  cp -r src/app src/github.com/cloudfoundry/leadership-election-release/src
  cp -r src/cmd src/github.com/cloudfoundry/leadership-election-release/cmd
}

create_release() {
  local file=${1}
  bosh create-release --force --tarball ${file}
}

cleanup() {
  rm -rf src/github.com/cloudfoundry/leadership-election-release
  rm -rf src/*.org
  rm -rf src/*.in
  rm -rf src/*.com
  rm -f src/modules.txt
}